<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="strokeLetteringTie">
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:shadowColor">#444d5b</item>
        <item name="android:shadowDx">10.0</item>
        <item name="android:shadowDy">10.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="strokeLettering">
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">#444d5b</item>
        <item name="android:shadowColor">#FFF</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

</resources>
